set term png
set output 'Esparso.png'
set encoding utf8

set xlabel "n (quantidade de vertices)"
set ylabel "Tempo (ns)"
set xtics nomirror
set ytics nomirror

set key Left 
set key left top

t(x) = a*x + b*x/2
fit t(x) 'Esparso.dat' using 1:2 via a, b

titulo = sprintf("T(n) = %.4gn + %.4gn",a,b)
titulo = sprintf("Busca Largura Esparso\n%s", titulo)
set title titulo

plot 'Esparso.dat' title "medições" with points pt 7 ps 1.2 , \
     t(x) title "T(n)" lt 1 lc 3
