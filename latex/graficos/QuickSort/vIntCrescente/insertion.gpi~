set term png
set output 'vIntCrescente.png'
set encoding utf8

set xlabel "n (tamanho do vetor)"
set ylabel "Tempo (ns)"
set xtics nomirror
set ytics nomirror

set key Left 
set key left top

t(x) = a*x*log(x) + b
fit t(x) 'vIntCrescente.dat' using 1:2 via a, b

titulo = sprintf("T(n) = %.4gn*log(n) + %.4g",a,b)
titulo = sprintf("Método Quicksort com vetor crescente\n%s", titulo)
set title titulo

plot 'vIntCrescente.dat' title "medições" with points pt 7 ps 1.2 , \
     t(x) title "T(n)" lt 1 lc 3
